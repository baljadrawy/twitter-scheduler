# إعدادات السيرفر
PORT=5000
NODE_ENV=development

# قاعدة البيانات (عدلها ببياناتك)
DATABASE_URL=postgresql://postgres:password@localhost:5432/twitter_scheduler_db

# إعدادات Redis
REDIS_URL=redis://localhost:6379

# مفتاح تشفير التوكين (ضع أي نص طويل وعشوائي)
JWT_SECRET=your_super_secure_random_jwt_secret_key

# إعدادات Twitter API (من Twitter Developer Portal)
# تأكد من تفعيل OAuth 2.0 واختيار Type: Web App
TWITTER_CLIENT_ID=ألصق_Client_ID_هنا
TWITTER_CLIENT_SECRET=ألصق_Client_Secret_هنا
# هذا الرابط يجب أن يطابق تماماً ما وضعته في إعدادات تويتر
CALLBACK_URL=http://localhost:5000/api/twitter/callback

# مفاتيح الحساب للاستخدام كـ Fallback (اختياري، للطريقة الهجينة)
TWITTER_API_KEY=xxx
TWITTER_API_SECRET=xxx
TWITTER_AUTH_TOKEN=xxx
TWITTER_CT0=xxx

# إعدادات OpenAI
OPENAI_API_KEY=sk-xxxx
