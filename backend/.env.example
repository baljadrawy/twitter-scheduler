# Server
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/twitter_scheduler_db

# Redis (Queue)
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=ضع_هنا_نصاً_عشوائياً_طويلاً_وقوياً

# Twitter API (من Developer Portal)
# تأكد من تفعيل OAuth 2.0 في إعدادات التطبيق وتعيين Type إلى Web App
TWITTER_API_KEY=xxx
TWITTER_API_SECRET=xxx
TWITTER_CLIENT_ID=xxx
TWITTER_CLIENT_SECRET=xxx
# يجب أن يطابق هذا الرابط ما وضعته في إعدادات تويتر بالضبط
CALLBACK_URL=http://localhost:5000/api/twitter/callback

# Fallback (Cookies) - للحساب الاحتياطي
TWITTER_AUTH_TOKEN=xxx
TWITTER_CT0=xxx

# OpenAI (للذكاء الاصطناعي)
OPENAI_API_KEY=sk-xxx
